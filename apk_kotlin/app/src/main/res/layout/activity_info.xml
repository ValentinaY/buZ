<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Info">

    <TextView
            android:text="Destino"
            android:textSize="32sp"
            android:layout_width="279dp"
            android:layout_height="60dp"
            android:id="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="90dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="65dp" android:layout_marginStart="65dp"/>
    <TextView
            android:text="09:00 a.m."
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="65dp" android:layout_marginStart="65dp"/>
    <TextView
            android:text="Horario"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="390dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="128dp" tools:srcCompat="@tools:sample/avatars[3]"
            android:id="@+id/imageView"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="47dp" android:layout_marginStart="47dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="186dp"/>
    <TextView
            android:text="Juan Carlos Segura"
            android:textSize="28sp"
            android:layout_width="175dp"
            android:layout_height="91dp"
            android:id="@+id/textView7" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" app:layout_constraintStart_toEndOf="@+id/imageView"/>
    <TextView
            android:text="BRJ765"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toEndOf="@+id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>