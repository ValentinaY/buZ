<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout">
    <ImageView
            android:layout_width="72dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/aaa1"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp" android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Destino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/imageView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="42dp"/>
    <TextView
            android:text="09:00 a.m."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toEndOf="@+id/imageView3"/>
    <TextView
            android:text="Lunes - Viernes"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>